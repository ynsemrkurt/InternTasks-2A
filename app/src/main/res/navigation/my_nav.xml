<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.interntasks_2a.case3.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_go_detailsFragment"
            app:destination="@id/detailsFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.interntasks_2a.case3.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="weather"
            app:argType="com.example.interntasks_2a.Weather" />
    </fragment>
</navigation>
